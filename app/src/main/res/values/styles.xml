<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Splash actionbar theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Button theme. -->
    <style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button.Borderless">

    </style>

    <style name="AppTheme.NoActionAndStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <!--TextStyle.-->
    <style name="TextStyle_Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/logoGray</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
    </style>

    <style name="TextStyle_Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
    </style>

    <style name="TextStyle_tag">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
    </style>

    <style name="CategoryTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/category_margin</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ContentTitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/category_margin</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="ContentTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/category_margin</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="CategoryImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/category_margin</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingLeft">@dimen/category_padding</item>
        <item name="android:paddingRight">@dimen/category_padding</item>
        <item name="android:paddingTop">@dimen/category_padding</item>
    </style>

    <style name="CategoryItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CardStyle" parent="CardView">
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/corner_radius_cardview</item>
        <item name="cardElevation">2dp</item>

    </style>
</resources>
