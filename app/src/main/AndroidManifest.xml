<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.giftishare">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".view.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.main.MainActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".view.addwallet.AddWalletActivity"
            android:label="@string/new_user_title"
            android:theme="@style/AppTheme.NoActionAndStatusBar" />

        <activity android:name=".view.onsalecoupons.OnSaleCouponsActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionAndStatusBar" />

        <activity android:name=".view.buysellcoupons.BuySellCouponsActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionAndStatusBar" />

        <activity
            android:name=".view.addcoupon.AddCouponActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionAndStatusBar" />

        <activity
            android:name=".view.buycoupon.BuyCouponActivity"
            android:label=""
            android:theme="@style/AppTheme.NoActionAndStatusBar" />

    </application>

</manifest>